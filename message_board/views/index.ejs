<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Message Board</title>
    </head>
    <body>
        <h1>The Dojo Message Board</h1>
        <form class="message_form" action="/messages" method="post">
            <label for="name">Name:</label>
            <input type="text" name="name" value="">
            <label for="message">Message:</label>
            <input type="textarea" name="message" value="">
            <input type="submit" name="submit" value="Post Message">
        </form>
        <h2>Here are the messages</h2>
        <% for(var message of messages){ %>
            <h3>Name: <%= message.name %></h3>
            <h3>Message: <%= message.message %></h3>
            <% for(var comment of message.comments){ %>
                <p>Name: <%= comment.name %></p>
                <p>Comment: <%= comment.comment %></p>
            <% } %>
            <form class="comment_form" action="/messages/<%= message.id %>/comment" method="post">
                <label for="name">Name:</label>
                <input type="text" name="name" value="">
                <label for="comment">Comment:</label>
                <input type="textarea" name="comment" value="">
                <input type="submit" name="submit" value="Post Comment">
            </form>
        <% } %>
    </body>
</html>
